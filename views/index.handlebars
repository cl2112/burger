

<h1>Eat-Da-Burger!</h1>
<h4>Keeping Track of All the Burgers You've Eaten, An' Wan't To Eat.</h4>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="true">
          <button type="submit">SLEEP TIME!</button>
        </form>

        {{!-- {{> cats/delete-cat}} --}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="false">
          <button type="submit">WAKE UP!</button>
        </form>

        {{!-- {{> cats/delete-cat}} --}}
      </li>
    {{/if}}
  {{/each}}
</ul>



<form action="/" method="POST">

  <div>
    <label for="burgerInput">Enter the name of a burger:</label>
    <input type="text" id="burgerInput" name="burgerInput">
  </div>

  <button type="submit">Add Burger</button>
</form>


