

<h1 class="centerText">Eat-Da-Burger!</h1>
<h4 class="centerText">Keeping Track of All the Burgers You've Eaten, An' Wan't To Eat.</h4>
<img id="burgerPic" src="assets/img/boiger.png">

<form class="centerText" action="/" method="POST">

  <div>
    <label for="burger_name">Add A Burger To The List:</label>
    <input type="text" id="burger_name" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>

<h2>Burgers To Be EATEN!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="eaten" value="true">
          <button type="submit">EATEN!</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="eaten" value="false">
          <button type="submit">I'M GONNA EAT IT AGAIN!</button>
        </form>

      </li>
    {{/if}}
  {{/each}}
</ul>





